<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hariprasad.thelocalherald.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etUsername_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name" />

            <EditText
                android:id="@+id/etUserEmail_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e-Mail" />

            <EditText
                android:id="@+id/etUserPassword_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/etUserRepassword_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Re-Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/etUserMobileNo_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number" />

            <!--<RadioGroup
                android:id="@+id/genderRadioGroup_Reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp">

                <RadioButton
                    android:id="@+id/male_Reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female_Reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup> -->

            <EditText
                android:id="@+id/etUserPenname_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pen-Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etUserWebsite_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website" />

            <EditText
                android:id="@+id/etUserGender_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender(M/F)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etUserLocality_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Locality" />

            <EditText
                android:id="@+id/etUserPIN_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pincode" />

            <Button
                android:id="@+id/btRegister_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="OnReg"
                android:text="register" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
